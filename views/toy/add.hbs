<form action="/toy/add" method="post">
   <h1>Add new bearbrick</h1>
   Toy name: <input type="text" name="name" id="" required>
   Toy image: <input type="url" name="image" id="" required>
   Toy pirce: <input type="number" name="price" id="" required>
   <br><br>
   Toy collection: <br>
   <select name="collection">
      {{#each collections }}
      <option value="{{ _id }}"> {{ name }}</option>
      {{/each}}
   </select>
   <br><br>
   <input type="submit" value="Add">
</form>